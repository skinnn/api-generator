{
	"title": "User",
	"name": "user",
	"description": "User endpoint",
	"access": {
		"create": {
			"roles": ["root", "admin" ]
		},
		"update": {
			"roles": ["root", "admin", "user"],
			"owner": true
		},
		"read": {
			"roles": [ "root", "admin", "user"],
			"owner": true
		},
		"delete": {
			"roles": ["root", "admin", "user"],
			"owner": true
		},
		"attach": {
			"roles": ["root", "admin", "user"],
			"owner": true
		}
	},
	"properties": {
		"username": {
			"title": "Username",
			"description": "Login handle, either username or email",
			"type": "string"
		},
		"password": {
			"title": "Password",
			"type": "string"
		},
		"email": {
			"title": "Email",
			"type": "string"
		},
		"firstName": {
			"title": "First name",
			"type": "string"
		},
		"lastName": {
			"title": "First name",
			"type": "string"
		},
		"roles": {
			"title": "Roles",
			"description": "User roles (root, admin, user, anon)",
			"type": "array",
			"default": ["anon"]
		},
		"created": {
			"title": "Created",
			"description": "Creation date time",
			"type": "string",
			"format": "date-time"
		},
		"updated": {
			"title": "Updated",
			"description": "Updated date time",
			"type": "string",
			"format": "date-time"
		}
	},
	"type": "object",
	"required": ["username", "password"]
}	